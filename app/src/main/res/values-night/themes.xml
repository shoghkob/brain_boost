<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_BrainBoost_Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light mode attributes -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Dark mode attributes -->
        <item name="colorPrimaryDark">@color/purple3</item>
        <!-- Define other dark mode attributes here -->
    </style>

    <style name="Theme.BrainBoost" parent="Theme_BrainBoost_Dark" />

    <style name="nightModeSwitch" parent="Theme_BrainBoost_Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="notificationSwitch" parent="Theme_BrainBoost_Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#000</item>
    </style>

    <style name="privateAccountSwitch" parent="Theme_BrainBoost_Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#000</item>
    </style>
</resources>
