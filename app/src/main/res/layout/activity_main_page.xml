<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainPage">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/user_logo"
            android:layout_marginHorizontal="230dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:text="Hey, Welcome to\nBrain Boost"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            />

        <ImageView
            android:id="@+id/welcome_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/owl_hi" />
    </LinearLayout>
    <TextView
        android:id="@+id/getStarted_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_layout"
        android:textColor="@color/teal2"
        android:text="Our Lessons"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        tools:ignore="HardcodedText" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/getStarted_text">
    <LinearLayout
        android:id="@+id/courses_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner1"
                android:scaleType="fitXY" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction to AI"
                android:textSize="20dp"
                android:textColor="#69c5df"
                android:textStyle="bold"
                android:padding="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/banner2"
                    android:scaleType="fitXY" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neural Networks"
                    android:textSize="20dp"
                    android:textColor="#69c5df"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/banner3"
                    android:scaleType="fitXY" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smart and Big Data"
                    android:textSize="20dp"
                    android:textColor="#69c5df"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>